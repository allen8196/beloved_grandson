# .env (完整版)

# --- OpenAI API Configuration ---
OPENAI_API_KEY="your_openai_api_key_here" # [需填寫]
MODEL_NAME=gpt-4o-mini

# --- LINE Bot Configuration ---
LINE_CHANNEL_ACCESS_TOKEN="YOUR_LINE_CHANNEL_ACCESS_TOKEN" # [需填寫]
LINE_CHANNEL_SECRET="YOUR_LINE_CHANNEL_SECRET" # [需填寫]

# --- PostgreSQL Configuration (for User Profiles) ---
# 使用服務名稱 'postgres' 作為 Host，並與根目錄 .env 保持一致
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ai_assistant_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=secret_password_change_me

# --- Redis Configuration ---
# 使用服務名稱 'redis' 作為 Host
REDIS_HOST=redis
REDIS_PORT=6379

# --- Milvus Configuration ---
# 使用服務名稱 'milvus' 作為 Host
MILVUS_URI=http://milvus:19530
MILVUS_COLLECTION=health_kb_ltm
MEM_COLLECTION=user_memory

# --- Chatbot Logic Configuration ---
SUMMARY_CHUNK_SIZE=5
SIMILARITY_THRESHOLD=0.7